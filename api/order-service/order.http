POST http://localhost:8000/api/v1/orders
Content-Type: application/json
Authorization: {{token}}

{
  "storeId": 1,
  "idempotencyKey": "order-test-20250925-0001",
  "addressId": 1,
  "couponId": 2,
  "clientPayableWon": 35000,
  "orderItems": [
    {
      "menuId": 2,
      "optionValueIds": [3, 6],
      "quantity": 2
    }
  ],
  "cartItemIds": [1],
  "deliveryFee": 3000
}

